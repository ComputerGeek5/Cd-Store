<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="1000.0" styleClass="main" stylesheets="@../../static/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.techstore.controller.CashierController">
   <children>
      <AnchorPane prefWidth="1000.0" VBox.vgrow="ALWAYS">
         <children>
            <TextArea layoutX="550.0" layoutY="50.0" prefHeight="500.0" prefWidth="400.0" />
            <TextField fx:id="itemName" alignment="CENTER" layoutX="14.0" layoutY="197.0" prefHeight="50.0" prefWidth="250.0" promptText="Item Name" />
            <TextField fx:id="itemQuantity" alignment="CENTER" layoutX="14.0" layoutY="272.0" prefHeight="50.0" prefWidth="250.0" promptText="Item Quantity" />
            <Button fx:id="addToBill" layoutX="330.0" layoutY="425.0" mnemonicParsing="false" onAction="#addToBill" prefHeight="40.0" prefWidth="200.0" styleClass="button-primary" text="Add To Bill" />
            <Button fx:id="checkOut" layoutX="39.0" layoutY="425.0" mnemonicParsing="false" onAction="#checkOut" prefHeight="40.0" prefWidth="200.0" styleClass="button-secondary" text="Check Out" />
            <Button fx:id="removeLast" layoutX="330.0" layoutY="500.0" mnemonicParsing="false" onAction="#removeLast" prefHeight="40.0" prefWidth="200.0" styleClass="button-danger" text="Remove Last" />
            <Button fx:id="home" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#home" prefHeight="40.0" prefWidth="200.0" styleClass="button-primary" text="Home" />
         </children>
      </AnchorPane>
   </children>
</VBox>
